{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build/dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": ["client/**/*"],
  "include": ["src/**/*"]
}